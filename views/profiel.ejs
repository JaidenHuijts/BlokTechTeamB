<!doctype html>
<head>
    <link rel="stylesheet" type="text/css"   href="./style.css">
    <title>Liken Matching Application</title>
</head>
<body class="profiel">
    <header>
        <img src="/images/logofestflirt.png">
    </header>
    <main>
        <section>
            <h1>Jouw profiel</h1>
            <img src="">
            <form name="registreerform" method="POST" action="/post-data">
                <label for="username">
                  Gebruikersnaam
                  <input type="text" id="username" name="username" />
                </label>
          
                <label for="email">
                  E-mail
                  <input type="email" id="email" name="email" />
                </label>
          
                <label for="firstname">
                  Voornaam
                  <input type="text" id="firstname" name="firstname" />
                </label>
          
                <label for="gender">
                  Gender
                  <select id="gender" name="gender">
                    <option value="man">Man</option>
                    <option value="vrouw">Vrouw</option>
                    <option value="anders">Anders</option>
                  </select>
                </label>
          
                <label for="lastname">
                  Achternaam
                  <input type="text" id="lastname" name="lastname" />
                </label>
          
                <label for="password">
                  Wachtwoord
                  <input type="password" id="password" name="password" />
                </label>
          
                <label for="geboortedatum">
                  Geboortedatum
                  <input type="date" id="geboortedatum" name="geboortedatum" />
                </label>
          
                <label for="herwachtwoord">
                  Herhaal Wachtwoord
                  <input type="password" id="repassword" name="repassword" />
          
                </label>
          
          
                
                <input type="submit" value="Registreer Nu!" />
          
              </form>
        </section>
    </main>

</body>